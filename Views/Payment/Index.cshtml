@model ECommerceMini.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">ðŸ’³ Choose Payment Method</h2>

            <form asp-action="Index" method="post">
                <div class="mb-4">
                    <label asp-for="PaymentMethod" class="form-label">Select Payment Method</label>
                    <select asp-for="PaymentMethod" class="form-select" required>
                        <option value="">-- Choose --</option>
                        <option>Card</option>
                        <option>GPay</option>
                        <option>Cash on Delivery</option>
                    </select>
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                
                <div id="cardDiv" class="border rounded p-3 bg-light mb-4 d-none">
                    <h5 class="mb-3">Card Details</h5>
                    <div class="mb-3">
                        <label asp-for="CardholderName" class="form-label">Cardholder Name</label>
                        <input asp-for="CardholderName" class="form-control" />
                        <span asp-validation-for="CardholderName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CardNumber" class="form-label">Card Number</label>
                        <input asp-for="CardNumber" class="form-control" maxlength="16" placeholder="1234 5678 9012 3456" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpiryMonth" class="form-label">Expiry Month</label>
                            <input asp-for="ExpiryMonth" class="form-control" maxlength="2" placeholder="MM" />
                            <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpiryYear" class="form-label">Expiry Year</label>
                            <input asp-for="ExpiryYear" class="form-control" maxlength="2" placeholder="YY" />
                            <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CVV" class="form-label">CVV</label>
                        <input asp-for="CVV" class="form-control" maxlength="4" placeholder="123" />
                        <span asp-validation-for="CVV" class="text-danger"></span>
                    </div>
                </div>

                
                <div id="gpayDiv" class="border rounded p-3 bg-light mb-4 d-none">
                    <h5 class="mb-3">GPay / UPI</h5>
                    <div class="mb-3">
                        <label asp-for="UpiId" class="form-label">UPI ID</label>
                        <input asp-for="UpiId" class="form-control" placeholder="example@upi" />
                        <span asp-validation-for="UpiId" class="text-danger"></span>
                    </div>
                </div>

                <input type="hidden" asp-for="Amount" />

                <button type="submit" class="btn btn-success btn-lg w-100 mt-3">Place Order</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const paymentSelect = document.querySelector('[name="PaymentMethod"]');
        const cardDiv = document.getElementById("cardDiv");
        const gpayDiv = document.getElementById("gpayDiv");

        function togglePaymentFields() {
            cardDiv.classList.add("d-none");
            gpayDiv.classList.add("d-none");

            if (paymentSelect.value === "Card") {
                cardDiv.classList.remove("d-none");
            } else if (paymentSelect.value === "GPay") {
                gpayDiv.classList.remove("d-none");
            }
        }

        paymentSelect.addEventListener("change", togglePaymentFields);
        togglePaymentFields(); 
    </script>
}
