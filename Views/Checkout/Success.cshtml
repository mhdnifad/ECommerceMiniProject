@{
    ViewData["Title"] = "Order Complete";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow p-4 text-center">
        <h2 class="text-success mb-3">✅ Thank You for Your Order!</h2>
        <p class="lead">Your order has been placed successfully and is being processed.</p>

        <div class="my-4">
            <i class="bi bi-bag-check" style="font-size: 4rem; color: green;"></i>
        </div>

        <p>You’ll receive an email confirmation shortly.</p>

        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-3">
            Continue Shopping
        </a>
    </div>
</div>
