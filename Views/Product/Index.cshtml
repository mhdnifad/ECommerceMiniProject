@model IEnumerable<ECommerceMini.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<ECommerceMini.Models.Category>;
}
<div class="container mt-4">
    <h2 class="mb-4">Explore Our Products</h2>

    @if (categories != null && categories.Any())
    {
        <div class="mb-4">
            <span class="fw-semibold">Filter by Category:</span>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-1">All</a>
            @foreach (var cat in categories)
            {
                <a asp-action="Index" asp-route-categoryId="@cat.Id" class="btn btn-outline-secondary btn-sm me-1">
                    @cat.Name
                </a>
            }
        </div>
    }

    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm rounded-3">
                    <img src="@p.ImageUrl" class="card-img-top p-3" style="height: 240px; object-fit: contain;" alt="@p.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="text-muted">@p.CategoryName</p>
                        <p class="flex-grow-1">@p.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">â‚¹@p.Price.ToString("0.00")</span>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">View</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
