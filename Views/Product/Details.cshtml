@model ECommerceMini.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="border rounded p-3 bg-white shadow-sm">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid w-100" style="object-fit: contain; height: 400px;" />
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <p class="text-muted mb-2">Category: @Model.Category?.Name</p>
            <p class="mb-3">@Model.Description</p>
            <h4 class="text-primary">â‚¹@Model.Price.ToString("0.00")</h4>
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success btn-lg mt-3">
                <i class="bi bi-cart-plus"></i> Add to Cart
            </a>
        </div>
    </div>
</div>